<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_home">

    <fragment
        android:id="@+id/fragment_home"
        android:name="com.example.farmatodoanime.ui.fragments.FragmentHome"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_fragment_home_to_fragment_search"
            app:destination="@id/fragment_search" />
    </fragment>
    <fragment
        android:id="@+id/fragment_search"
        android:name="com.example.farmatodoanime.ui.fragments.FragmentSearch"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_fragment_search_to_fragmentAnimeDetail"
            app:destination="@id/fragmentAnimeDetail" />
    </fragment>

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.farmatodoanime.ui.activities.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/fragmentAnimeDetail"
        android:name="com.example.farmatodoanime.ui.fragments.FragmentAnimeDetail"
        android:label="fragment_anime_detail"
        tools:layout="@layout/fragment_anime_detail" />
</navigation>